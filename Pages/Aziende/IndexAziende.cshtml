@page
@model SRA.Pages.Aziende.IndexAziendeModel
@{
    ViewData["Title"] = "Index";

}
<h2>Elenco dei Produttori/Fornitori</h2>

<p>
<button type="button" class="bottone bottone1" data-toggle="ajax-modal-aggazienda">
    Aggiungi
</button>
</p>
<table id="tblaziende" class="display table table-hover table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aziende[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aziende[0].RagioneSociale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aziende[0].PartitaIVA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aziende[0].Attiva)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Aziende)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RagioneSociale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartitaIVA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Attiva)
                </td>
                <td>
                    <button type="button" class="bottone bottone1" data-toggle="ajax-modal-modazienda" data-idazienda="@item.ID">
                        Modifica
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal placeholder -->
<div id="modal-placeholder-aziende"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblaziende').DataTable({
                // Opzioni di configurazione
                paging: false,          // Abilita la paginazione
                searching: true,       // Abilita la ricerca
                ordering: true,        // Abilita l'ordinamento delle colonne
            }
            );
        });

        $(function () {
            var placeholderElement = $('#modal-placeholder-aziende');
            $('button[data-toggle="ajax-modal-aggazienda"]').click(function (event) {
                var geturl = `${window.location.protocol}//${window.location.hostname}${window.location.port ? `:${window.location.port}` : ''}`;
                var urldettaglio = '/Aziende/IndexAziende?handler=AggiungiModalePartial';
                geturl += urldettaglio;
                $.get(geturl).done(function (data) {
                    // append HTML to document, find modal and show it
                    //$(document.body).append(data).find('.modal').modal('show');
                    placeholderElement.html(data);
                    placeholderElement.find('.modal').modal('show');
                });
            });
        });

        $(function () {
            var placeholderElement = $('#modal-placeholder-aziende');
            $('button[data-toggle="ajax-modal-modazienda"]').click(function (event) {
                var geturl = `${window.location.protocol}//${window.location.hostname}${window.location.port ? `:${window.location.port}` : ''}`;
                var urldettaglio = '/Aziende/IndexAziende?handler=AggiungiModalePartial';
                geturl += urldettaglio;
                const idazienda = $(this).attr('data-idazienda');
                geturl += "&idazienda=";
                geturl += idazienda;
                $.get(geturl).done(function (data) {
                    // append HTML to document, find modal and show it
                    //$(document.body).append(data).find('.modal').modal('show');
                    placeholderElement.html(data);
                    placeholderElement.find('.modal').modal('show');
                });
            });
        });


</script>
}