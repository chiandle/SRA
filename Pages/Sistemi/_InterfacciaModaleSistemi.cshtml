@model SRA.Models.InputSistemiModel
<!-- Modal -->
<div class="modal fade" id="mod-stato" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">Aggiungi/Modifica Sistema</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    
                </button>
            </div>


            <div class="modal-body">
                <form id="idnuovaSistema" asp-page-handler="AggModSistema" method="post">
                    Nome <br />
                    <input asp-for="@Model.Sistema.Nome" class="form-control" />
                    <br />
                    Sistema Operativo<br />
                    <input asp-for="@Model.Sistema.SistemaOperativo" class="form-control" />
                    <br />
                    In produzione
                    <input asp-for="@Model.Sistema.Inproduzione" /> <br /><br />
                    Data Dismissione
                    <input asp-for="@Model.Sistema.DataDismissione" class="form-control" />
                    <br />
                    <input type="hidden" asp-for="Sistema.ID" value="@Model.Sistema.ID" /><br /><br />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                    <button type="submit" class="bottone bottone1" data-save="modal">Salva</button>
                </form>

            </div>
            <br />

            <div class="modal-footer">
            </div>

        </div>
    </div>
</div>

