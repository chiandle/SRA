@page
@model SRA.Pages.TipiRischio.IndexTipiRischioModel
@{
    ViewData["Title"] = "Index";

}
<h2>Elenco delle Tipologie di Rischio</h2>

<p>
<button type="button" class="bottone bottone1" data-toggle="ajax-modal-aggtiporischio">
    Aggiungi
</button>
</p>
<table id="tbltipirischio" class="display table table-hover table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipiRischio[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipiRischio[0].DescrizioneTipoRischio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TipiRischio)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescrizioneTipoRischio)
                </td>
                <td>
                    <button type="button" class="bottone bottone1" data-toggle="ajax-modal-modtiporischio" data-idtiporischio="@item.ID">
                        Modifica
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal placeholder -->
<div id="modal-placeholder-tipirischio"></div>


@section Scripts {
    <script>

                $(document).ready(function () {
                    $('#tbltipirischio').DataTable({
                        // Opzioni di configurazione
                        paging: false,          // Abilita la paginazione
                        searching: true,       // Abilita la ricerca
                        ordering: true,        // Abilita l'ordinamento delle colonne
                    }
                    );
                });

$(function () {
    var placeholderElement = $('#modal-placeholder-tipirischio');
    $('button[data-toggle="ajax-modal-aggtiporischio"]').click(function (event) {
        var geturl = `${window.location.protocol}//${window.location.hostname}${window.location.port ? `:${window.location.port}` : ''}`;
        var urldettaglio = '/TipiRischio/IndexTipiRischio?handler=AggiungiModalePartial';
        geturl += urldettaglio;
        $.get(geturl).done(function (data) {
            // append HTML to document, find modal and show it
            //$(document.body).append(data).find('.modal').modal('show');
            placeholderElement.html(data);
            placeholderElement.find('.modal').modal('show');
        });
    });
});

$(function () {
    var placeholderElement = $('#modal-placeholder-tipirischio');
    $('button[data-toggle="ajax-modal-modtiporischio"]').click(function (event) {
        var geturl = `${window.location.protocol}//${window.location.hostname}${window.location.port ? `:${window.location.port}` : ''}`;
        var urldettaglio = '/TipiRischio/IndexTipiRischio?handler=AggiungiModalePartial';
        geturl += urldettaglio;
        const idtiporischio = $(this).attr('data-idtiporischio');
        geturl += "&idtiporischio=";
        geturl += idtiporischio;
        $.get(geturl).done(function (data) {
            // append HTML to document, find modal and show it
            //$(document.body).append(data).find('.modal').modal('show');
            placeholderElement.html(data);
            placeholderElement.find('.modal').modal('show');
        });
    });
});

</script>
}
