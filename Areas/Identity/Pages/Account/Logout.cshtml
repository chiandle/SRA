@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<style>
    .bottone {
        background-color: #0e2661;
        border-radius: 8px;
        padding: 4px 12px;
        color: white;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .bottone1 {
        background-color: #0e2661;
        color: white;
        border: 2px solid #0e2661;
    }

        .bottone1:hover {
            background-color: white;
            color: #092341;
        }
</style>

<header>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <text><h1>Vuoi uscire definitivamente?</h1></text>
            <form class="form-inline" asp-area="Identity" asp-page="Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="bottone bottone1">Esci</button>
            </form>
        }
        else
        {
            <h1>A presto</h1>
            <p>Sei uscito dall'applicazione, scelgi login in alto a destra per entrare nuovamente.</p>
        }
    }
</header>
